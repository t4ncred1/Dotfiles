### Keyboard

# change keyboard layout
bindsym $win+k                  exec --no-startup-id $HOME/Scripts/keyboardToggle.sh

#lock the screen
bindsym $win+l                  exec --no-startup-id "setxkbmap us; i3lock-fancy -- scrot"

